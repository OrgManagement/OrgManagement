{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "semi-style": [
      "warn",
      "last"
    ],
    "no-extra-semi": "error",
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true,
        "ignoreComments": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always",
      {
        "arraysInObjects": true
      }
    ],
    "no-tabs": "error",
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "indent": [
      "error",
      2
    ],
    "comma-style": [
      "error",
      "last",
      {
        "exceptions": {
          "ArrayPattern": true
        }
      }
    ],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ]
  }
}
